<div class="container">
  <% flash.each do |type, msg| %>
    <div class="alert <%= (type=='notice')? "alert-success": "alert-danger" %> alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>
