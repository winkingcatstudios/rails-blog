<h1 class="text-center mt-4">Category: <%= @category.name %></h1>
<div class="text-center mt-4">
  <% if logged_in? && current_user.admin? %>
    <%= link_to "Edit category", edit_category_path(@category), class:"btn btn-info" %>
  <% end %>
</div>
<h3 class="text-center mt-4">Articles</h2>
<div class="flickr_pagination">
  <div class="page_info mb-2">
    <%= page_entries_info @articles  %>
  </div>
  <%= will_paginate @articles , :container => false %>
</div>
<%= render "articles/article", obj: @articles %>
<div class="flickr_pagination">
  <div class="page_info mb-2">
    <%= page_entries_info @articles  %>
  </div>
  <%= will_paginate @articles , :container => false %>
</div>
